{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always",
    "source.fixAll": "always"
  },
  "files.autoSave": "afterDelay",
  "search.exclude": {
    "**/.git": true,
    "**/.next": true,
    "**/.husky": true,
    "**/.vscode": true,
    "**/node_modules": true
  }
}
